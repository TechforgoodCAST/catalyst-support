<div class="flex flex-col h-full items-center justify-center">
  <div class="bg-brand-navy-5 p-4">
    <h2 class="font-lexenddeca text-2xl text-brand-navy mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input-text" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input-text" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'font-semibold cursor-pointer' %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit "Log in", class: "btn-wide bg-brand-navy text-white" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
