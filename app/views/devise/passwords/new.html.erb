<div class="flex flex-col h-full items-center justify-center">
  <div class="bg-brand-navy-5 p-4">
    <h2 class="font-lexenddeca text-2xl text-brand-navy mb-4">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="mb-4">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input-text" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Send me reset password instructions", class: "btn-wide bg-brand-navy text-white" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
