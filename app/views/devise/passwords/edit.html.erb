<div class="flex flex-col h-full items-center justify-center">
  <div class="bg-brand-navy-5 p-4">
    <h2 class="font-lexenddeca text-2xl text-brand-navy mb-4">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <div class="mb-4">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, "New password", class: "form-label" %>
        <% if @minimum_password_length %>
          <em class="text-sm">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input-text" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input-text" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Change my password", class: "btn-wide bg-brand-navy text-white" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
